{% extends "base.html.jinja" %}
{% block content %}
    <h2>Pobierz opinie o produkcie</h2>
    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-square-fill me-2"></i>
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}
    <form action="{{ url_for('extract') }}" method="POST" class="mt-3">
        <div class="row g-3 align-items-center">
            <!-- <div class="col-auto">
                <label for="product_id" class="col-form-label">Kod produktu</label>
            </div> -->
            <div class="col-auto">
                <input required type="text" id="product_id" name="product_id" class="form-control" placeholder="Kod produktu">
            </div>
            <div class="col-auto">
                <input type="submit" class="btn btn-primary" value="Analizuj">
            </div>
        </div>
    </form>
{% endblock content %}