{% extends "base.html.jinja" %}
{% block content %}
    <h1>Pobierz opinie o produkcie</h1>
    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-square-fill me-2"></i>
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}
    <form action="{{ url_for('extract') }}" method="POST" class="mt-3">
        <div class="input-group">
            <input required type="text" id="product_id" name="product_id" class="form-control" placeholder="ID lub URL produktu...">
            <button type="submit" class="btn btn-outline-primary">Analizuj</button>
        </div>
    </form>
{% endblock content %}